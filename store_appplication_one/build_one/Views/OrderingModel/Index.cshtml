                </tbody>
            </table>
        </div>
    </div>
    <hr />
</div>
<hr>
@{
    // this block of code is for checking and processing orders
}
<div class="jumbotron">
    <h3><u> Process Order </u> </h3>

    <div class="row">
        <div class="col-sm-3">
            <button> Total Items </button>
        </div>
        <div class="col-sm-3">
            <button class="btn-goup">
                Check Total
            </button>
        </div>
        <div class="col-sm-3">
            <button class="btn-goup">
                Check Balance
            </button>
        </div>
        <div class="col-sm-3">
            <p> [In Development] </p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-3">
            <input class="form-control" type="text" placeholder="23" readonly>
        </div>
        @{
            int payAmount = Model.CurrentBalance;
        }
        <div class="col-sm-3">
            <p> £ @payAmount</p>
        </div>
        <div class="col-sm-3">
            <input class="form-control" type="text" placeholder="£ 27,980" readonly>
        </div>
        <div class="col-sm-3">
            [In Development]
        </div>
    </div>


</div>
