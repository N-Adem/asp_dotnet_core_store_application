@{
    ViewData["Title"] = "Index";
}

<hr />
@{
    // Code block below is for the total selected items ready to be purchased.
}

<div class="jumbotron">
    <h3> <u> Selected Items </u></h3>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">Electricals</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " data-toggle="tab" href="#profile">Clothing</a>
